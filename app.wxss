/* 全局样式 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 主题色定义 */
:root {
  --primary-color: #e6f7ff;
  --secondary-color: #91d5ff;
  --text-color: #333333;
  --light-text: #666666;
  --border-color: #e5e5e5;
}

/* 通用样式 */
.container {
  padding: 0 20rpx;
}

/* 自定义按钮样式 */
.btn-blue {
  background: linear-gradient(135deg, #91d5ff 0%, #52a8ff 100%);
  color: white;
  border-radius: 8rpx;
  text-align: center;
  padding: 16rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 10rpx rgba(145, 213, 255, 0.3);
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(145, 213, 255, 0.08);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

/* 商品卡片基础样式 */
.goods-card {
  display: flex;
  flex-direction: column;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(145, 213, 255, 0.08);
}

/* 店铺头部样式 */
.shop-header {
  background-color: var(--primary-color);
  padding: 24rpx;
  border-radius: 16rpx 16rpx 0 0;
}